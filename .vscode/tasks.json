{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Make output directory (debug)",
            "command": "cmd.exe",
            "args": [
                "/C",
                "if not exist \"${fileDirname}\\bin\\Debug\" mkdir \"${fileDirname}\\bin\\Debug\""
            ]
        },
        {
            "type": "shell",
            "label": "Make output directory (release)",
            "command": "cmd.exe",
            "args": [
                "/C",
                "if not exist \"${fileDirname}\\bin\\Release\" mkdir \"${fileDirname}\\bin\\Release\""
            ]
        },
        {
            "type": "shell",
            "label": "Build active file (debug)",
            "detail": "compiler: cl.exe",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fo:",
                "${fileDirname}\\bin\\Debug\\${fileBasenameNoExtension}.obj",
                "/Fe:",
                "${fileDirname}\\bin\\Debug\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Make output directory (debug)"
            ]
        },
        {
            "type": "shell",
            "label": "Build active file (release)",
            "detail": "compiler: cl.exe",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fo:",
                "${fileDirname}\\bin\\Release\\${fileBasenameNoExtension}.obj",
                "/Fe:",
                "${fileDirname}\\bin\\Release\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "dependsOn": [
                "Make output directory (release)"
            ]
        }
    ]
}